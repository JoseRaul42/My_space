@inherits LayoutComponentBase

<div class="app-shell">
    <NavMenu />
    <div class="scanlines" aria-hidden="true"></div>
    <div class="content-wrap">
        @Body
    </div>

    <!-- Floating player lives here so it persists across pages -->
    <div class="player-dock">
        <YouTubeAutoplay VideoId="dQw4w9WgXcQ" Autoplay="true" Loop="true" Minimized="true" />
    </div>
</div>

<style>
@@import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;700&display=swap');

/* Global theme variables (dark-only) */
:root {
  --bg-0: #001524;        /* rich-black */
  --bg-1: #15616d;        /* caribbean-current */
  --bg-2: #0e4b57;        /* a derived darker caribbean-current */
  --text-0: #ffecd1;      /* papaya-whip */
  --text-1: rgba(255, 236, 209, 0.75); /* papaya-whip at 75% */
  --accent-1: #ff7d00;    /* orange-wheel */
  --accent-2: #78290f;    /* sienna */
  --ok: var(--accent-1);
  --warn: var(--accent-1);
  --err: var(--accent-1);
  --border: rgba(120, 41, 15, 0.5); /* sienna at 50% */
  --muted: rgba(255, 236, 209, 0.5); /* papaya-whip at 50% */
  
  --radius-xl: 1.25rem; --radius-lg: .875rem;
  --shadow-1: 0 10px 30px rgba(0,0,0,.35);
  --shadow-2: 0 6px 18px rgba(0,0,0,.3);
  --transition: 220ms cubic-bezier(.2,.8,.2,1);
  --font-mono: 'IBM Plex Mono', monospace;
}

@@media (prefers-reduced-motion: reduce) {
  * { animation: none !important; transition: none !important; }
}

body {
    font-family: var(--font-mono);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

@@keyframes flicker {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.95; }
}
</style>
