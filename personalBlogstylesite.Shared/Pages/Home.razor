<style>
    .home-hero {
        text-align: center;
        padding: 4rem 1rem;
        position: relative;
        z-index: 1;
    }
    .home-hero h1 {
        font-size: clamp(32px, 5vw, 56px);
        color: var(--accent-1);
        text-shadow: 0 0 15px rgba(255, 125, 0,.7);
        display: inline-block;
        white-space: nowrap;
        overflow: hidden;
        border-right: 3px solid var(--accent-1);
        animation: typing 2.5s steps(8, end), caret .75s step-end infinite;
    }
    .home-hero p {
        font-size: 1.125rem;
        color: var(--text-1);
        max-width: 60ch;
        margin: 1rem auto 0;
    }

    @@keyframes typing {
        from { width: 0; }
        to { width: 100%; }
    }

    @@keyframes caret {
        from, to { border-color: transparent; }
        50% { border-color: var(--accent-1); }
    }
</style>
